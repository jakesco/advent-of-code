    default-language: GHC2021
    ghc-options:      -Wall
    build-depends:    base ^>=4.17.2.1
                      , split
                      , containers
                      , array
                      , mtl
                      , advent
    hs-source-dirs:   solutions
    other-modules:    Advent.Utils
                    , Advent.Parser
                    , Advent.Grid
                    , Advent.Graph

