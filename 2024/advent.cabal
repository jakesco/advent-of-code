cabal-version:   3.0
name:            advent
version:         0.1.0.0
author:          Jake Scott
maintainer:      scottj1123@gmail.com
extra-doc-files: README.md

library
    default-language: GHC2021
    ghc-options:      -Wall
    build-depends:    base ^>=4.17.2.1
                    , containers
    exposed-modules:  Advent.Utils
                    , Advent.Parser
                    , Advent.Grid
                    , Advent.Graph
    hs-source-dirs:   solutions

